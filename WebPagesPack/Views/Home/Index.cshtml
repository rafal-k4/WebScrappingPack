<div class="col-12 text-center">
    @foreach (var item in Model.KwejkViewModel)
    {
        if (item.ImageUrl != null)
        {
            <div class="bottom-top-padding">
                <h3 class="text-white">@item.Title</h3>
                <img src="@item.ImageUrl" class="border border-larger" />
            </div>
        }
        if (item.VideoUrl != null)
        {
            <div class="bottom-top-padding">
                <h3 class="text-white">@item.Title</h3>
                <video class="text-center border border-larger" width="320" height="240" controls>
                    <source src="@item.VideoUrl" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        }

    }
</div>

<div class="col-12 text-center" id="loading">
    <img class="shrinkedImage" id="loading-gif" src="~/Images/loading.gif">
</div>

@section scripts
{
    @Html.RenderPartialAsync("KwejkScripts", Model)
}