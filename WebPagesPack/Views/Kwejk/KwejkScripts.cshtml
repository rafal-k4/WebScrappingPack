@model WebPagesPack.Models.KwejkViewModel
<script>
    let currentPage;
    let Url;
    let documentHeight = 0;

    $(document).ready(function () {
        currentPage = @Model.CurrentPageNumber;
    })

    $(window).scroll(function () {
        if ($(document).scrollTop() > $(document).height() - 3000 && documentHeight !== $(document).height()) {

            currentPage--
            $.get("/Kwejk/GetPage/" + currentPage, function (data) {
                $("div#loading").remove();
                $("div.PageContent").append(data);
            });
            
            documentHeight = $(document).height();
        }
    });

</script>
